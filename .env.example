# MFP Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER SETTINGS
# =============================================================================
MFP_HOST=0.0.0.0
MFP_PORT=8000
MFP_LOG_LEVEL=INFO
MFP_DEBUG=false

# =============================================================================
# COMPILER SETTINGS
# =============================================================================
MFP_COMPILE_ON_STARTUP=true
MFP_COMPILED_OUTPUT_DIR=./compiled
MFP_SWAGGER_CONFIG_FILE=./config/swaggers.yaml

# LLM enhancement (optional â€” requires anthropic package)
MFP_LLM_ENHANCE=false
MFP_LLM_API_KEY=
MFP_LLM_MODEL=claude-sonnet-4-20250514

# =============================================================================
# EXECUTOR SETTINGS
# =============================================================================
MFP_DOCKER_IMAGE=mfp-sandbox:latest
MFP_EXECUTION_TIMEOUT_SECONDS=30
MFP_MAX_OUTPUT_SIZE_BYTES=1048576
MFP_NETWORK_MODE=mfp_network

# =============================================================================
# CACHE SETTINGS
# =============================================================================
MFP_CACHE_ENABLED=true
MFP_CACHE_TTL_SECONDS=3600
MFP_CACHE_MAX_ENTRIES=500
MFP_CACHE_DB_PATH=./data/cache.db

# =============================================================================
# SECURITY
# =============================================================================
MFP_MAX_CODE_SIZE_BYTES=65536
# Comma-separated allowed API domains (empty = allow all)
# MFP_ALLOWED_DOMAINS=api.weather.example.com,api.hotel.example.com

# =============================================================================
# API SERVER CREDENTIALS
# Format: MFP_{SERVER_NAME_UPPER}_BASE_URL and MFP_{SERVER_NAME_UPPER}_AUTH
# =============================================================================

# Weather API
MFP_WEATHER_BASE_URL=https://api.weather.example.com/v1
MFP_WEATHER_AUTH=Authorization: Bearer your-weather-api-key-here

# Hotel API
MFP_HOTEL_BASE_URL=https://api.hotel.example.com/v2
MFP_HOTEL_AUTH=Authorization: Bearer your-hotel-api-token-here
